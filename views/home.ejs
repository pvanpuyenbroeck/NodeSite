<% include ../partials/header.ejs %>
    <div class="banner"></div>
    <div class="container">
        <div class="col-md-9 ">
            <% BlogPosts.forEach(function(BlogPost){ %>
                <div class="blogpost">
                    <div class="col-md-12">
                        <h1>
                            <%=BlogPost.titel%>
                        </h1>
                        <h3>
                            <%=BlogPost.datum%>
                        </h3>
                    </div>
                    <div class="col-md-4">
                        <img class="img-responsive image" src="<%=BlogPost.url%>" </img>
                    </div>
                    <div class="description col-md-8">
                        <%=BlogPost.description%>
                    </div>
                    <div class="col-md-12">
                        <div class="pull-right">
                            <a href="/blogpost/<%=BlogPost._id%>/edit" class="btn btn-success">Edit</a>
                            <form id="delete-form" action="/blogpost/<%=BlogPost._id%>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-danger" value="Delete">
                            </form>
                            <a href="/blogpost/<%=BlogPost._id%>/index" class="btn btn-primary">Show</a>
                        </div>
                    </div>
                </div>
                <%})%>

                    <div>
                        <div>
                        </div>

                        <% include ../partials/footer.ejs %>